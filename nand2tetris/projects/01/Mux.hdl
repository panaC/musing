/** 
 * Multiplexor:
 * out = ((sel == 0), a, b)
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    // select one channel form a or b
    PARTS:
    Not(in=sel, out=notsel);
    And(a=a, b=notsel, out=sela);
    And(a=b, b=sel, out=selb);
    Or(a=sela, b=selb, out=out);

}
